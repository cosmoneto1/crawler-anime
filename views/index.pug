doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css' integrity='sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2' crossorigin='anonymous')
  title= title 
  link(rel='shortcut icon' href='assets/favicon.ico' type='image/x-icon')
  body.bg-secondary
    .container-fluid.p-3
      h2.text-center.text-warning= message
      .row
        each its, key in values
          each val in its            
            a.col.mb-2(href=val.link target="_blank")
             .card.bg-dark(style='width: 130px;height: 190px;')
              img.card-img-top(src=val.img style='width: 128px; height: 128px;' alt=val.title)            
              div.badge.badge-dark.text-wrap.text-truncate.text-center= val.title
    script(src='https://code.jquery.com/jquery-3.5.1.min.js' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx' crossorigin='anonymous')
